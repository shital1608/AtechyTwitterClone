<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="sign_in_to_">
        <item name="android:fontFamily">@font/hellix_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_heading</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="email_text_">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darken_text</item>
    </style>

    <style name="tweet_your_reply">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darken_text</item>
    </style>

    <style name="sign_in">
        <item name="android:fontFamily">@font/hellix_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:lineSpacingExtra">43sp</item>
    </style>

    <style name="at_email_">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darken_text</item>
        <item name="android:lineSpacingExtra">43sp</item>
    </style>

    <style name="don_t_have">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="don_t_have_semi_bold">
        <item name="android:fontFamily">@font/hellix_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="message_">
        <item name="android:fontFamily">@font/hellix_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/message_color</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/color_white</item>
        <!-- Customize your theme here. -->
    </style>


</resources>